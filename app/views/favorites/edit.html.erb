<!-- Validation failure messages -->

<% if @favorite.errors.any? %>
  <% @favorite.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Favorite #<%= @favorite.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_favorite/<%= @favorite.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



          <!-- Label and input for brief_id -->
          <div class="form-group">
            <label for="brief_id" class="col-sm-2 control-label">
              Brief
            </label>
            <div class="col-sm-10">
              <%= select_tag(:brief_id, options_from_collection_for_select(Brief.all, :id, :name, @favorite.brief_id), :class => "form-control") %>

            </div>

          <!-- Label and input for comment -->
          <div class="form-group">
            <label for="comment" class="col-sm-2 control-label">
              Comment
            </label>
            <div class="col-sm-10">
              <textarea id="comment" name="comment" placeholder="Comment" class="form-control" rows="3"><%= @favorite.comment %></textarea>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Favorite
              </button>
              or
              <a href="/favorites/<%= @favorite.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
