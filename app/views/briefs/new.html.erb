<!-- Validation failure messages -->

<% if @brief.errors.any? %>
  <% @brief.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Brief</h3>
      </div>
      <div class="panel-body">
        <form action="/create_brief" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Name
            </label>
            <div class="col-sm-10">
              <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @brief.name %>">
            </div>
          </div>

          <!-- Label and input for user_id -->
          <div class="form-group">
            <label for="user_id" class="col-sm-2 control-label">
              User
            </label>
            <div class="col-sm-10">
              <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @brief.user_id %>">
            </div>
          </div>

          <!-- Label and input for link -->
          <div class="form-group">
            <label for="link" class="col-sm-2 control-label">
              Link
            </label>
            <div class="col-sm-10">
              <textarea id="link" name="link" placeholder="Link" class="form-control" rows="3"><%= @brief.link %></textarea>
            </div>
          </div>

          <!-- Label and input for lawyer -->
          <div class="form-group">
            <label for="lawyer" class="col-sm-2 control-label">
              Lawyer
            </label>
            <div class="col-sm-10">
              <input type="text" id="lawyer" name="lawyer" placeholder="Lawyer" class="form-control" value="<%= @brief.lawyer %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Brief
              </button>
              or
              <a href="/briefs">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
