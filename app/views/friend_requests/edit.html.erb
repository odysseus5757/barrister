<!-- Validation failure messages -->

<% if @friend_request.errors.any? %>
  <% @friend_request.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Friend Request #<%= @friend_request.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_friend_request/<%= @friend_request.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for sender_id -->
          <div class="form-group">
            <label for="sender_id" class="col-sm-2 control-label">
              Sender
            </label>
            <div class="col-sm-10">
              <input type="text" id="sender_id" name="sender_id" placeholder="Sender" class="form-control" value="<%= @friend_request.sender_id %>">
            </div>
          </div>

          <!-- Label and input for receiver_id -->
          <div class="form-group">
            <label for="receiver_id" class="col-sm-2 control-label">
              Receiver
            </label>
            <div class="col-sm-10">
              <input type="text" id="receiver_id" name="receiver_id" placeholder="Receiver" class="form-control" value="<%= @friend_request.receiver_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Friend Request
              </button>
              or
              <a href="/friend_requests/<%= @friend_request.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
